<h1 style="margin-top: 5%;"> </h1>
<div container class="container"; style="text-align: center;">
   <h1><%= @artist.name %>'s Page </h1>
   <div container class="container"; style="text-align: center;">
      <img src=<%=@artist.image%> style="width: 300px; border: solid; .5px; border-radius: 75%;"/>
   </div>
</div>

<br>
<h4>Age: <%= @artist.age %><h4>
<h4>Bio: <%= @artist.bio %></h4>

<h4> Songs by <%= @artist.name %>: </h4>
<% @artist.songs.each do |song| %>
   <ul>
   <li><%= song.name %></li>
   <%= button_to 'favorite', song_favorite_path(song), method: "post" %>
   </ul>
   <% end %>
<br>
<h5> Artists Like <%= @artist.name %>: </h5>
   <% @artist.genres.each do |genre| %>
      <% genre.artists.where.not(id: @artist.id).each do |artist| %>
            <%= link_to artist.name, artist_path(artist) %>
         <br>
      <% end %>
   <% end %>

